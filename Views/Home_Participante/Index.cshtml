@{
    ViewData["Title"] = "Home Organizador";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Emissor de Certificados</title>
    <link rel="stylesheet" href="~/css/Home_Participante.css">
</head>
<body>
    <img src="~/logoemescam.png" class="logo">

    <div class="card-section">
        <div class="card">
            <h6>Bem-Vindo, usuário</h6>
            <div class="card-title">Painel Inicial</div>
        </div>
        <div class="card card-principal">
            <h5>Título do Card Principal</h5>
        </div>
    </div>
</body>
</html>

<style>
    body {
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background: linear-gradient(135deg, #01f949, #14086d);
        font-family: Arial, sans-serif;
        position: relative;
    }

    .logo {
        position: absolute;
        top: 10px;
        left: 10px;
        width: 320px;
    }

    .card-section {
        display: flex;
    }

    .card {
        background-color: rgba(250, 235, 215, 0.5);
        padding: 5%;
        border-radius: 15px;
        box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.2);
        height: 700px;
        width: 300px;
        margin-right: 20px; /* Espaçamento entre os cards */
        left: -40px;
    }

    .card-principal {
        background-color: rgba(250, 235, 215, 0.5);
        padding: 20px;
        border-radius: 15px;
        width: 100%;
    }

    ul {
        list-style-type: none;
        padding: 0;
    }

</style>
