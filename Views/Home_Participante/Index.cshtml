<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Emissor de Certificados</title>
    <link rel="stylesheet" href="~/css/Home_Participante.css" asp-append-version="true" />
</head>
<body>

    <header>
        <img id="logo" src="/logoemescam.png" alt="Logo Emescam">
        <nav>
            <a href="#" onclick="mostrarCard('meus-eventos')">Meus Eventos</a>
        </nav>


        <div id="dropdown-container">
            <div id="bem-vindo">Bem-Vindo, @ViewBag.Login!</div>
            <div id="dropdown-content">
                <a id="sair-link" href="#">Sair</a>
            </div>
        </div>
    </header>

    <!-- EVENTOS -->
    <div id="Eventos">
        <h4>Meus Eventos</h4>

        <!-- Campo de pesquisa -->
        <input type="text" id="pesquisa-evento" placeholder="Pesquisar eventos..." onkeyup="filtrarEventos()">

        <!-- Tabela de resultados -->
        <table id="tabela-eventos">
            <thead>
                <tr>
                    <th>Nome do Evento</th>
                    <th>Data do Evento</th>
                    <th>Visualizar Certificado</th>
                </tr>
            </thead>
            <tbody>
                <!-- As linhas da tabela serão preenchidas dinamicamente aqui -->
            </tbody>
        </table>
    </div>

    <script>
        const eventos = [
            { nome: 'Evento 1', data: '2024-08-01', certificadoUrl: '#certificado1' },
            { nome: 'Evento 2', data: '2024-09-10', certificadoUrl: '#certificado2' },
            { nome: 'Evento 3', data: '2024-10-20', certificadoUrl: '#certificado3' },
            // Adicione mais eventos conforme necessário
        ];

        function atualizarTabela(eventosFiltrados) {
            const tabelaCorpo = document.querySelector('#tabela-eventos tbody');
            tabelaCorpo.innerHTML = '';

            eventosFiltrados.forEach(evento => {
                const linha = document.createElement('tr');
                linha.innerHTML = `
                            <td>${evento.nome}</td>
                            <td>${evento.data}</td>
                            <td><a href="${evento.certificadoUrl}" target="_blank">Visualizar</a></td>
                        `;
                tabelaCorpo.appendChild(linha);
            });
        }

        function filtrarEventos() {
            const filtro = document.querySelector('#pesquisa-evento').value.toLowerCase();
            const eventosFiltrados = eventos.filter(evento => evento.nome.toLowerCase().includes(filtro));
            atualizarTabela(eventosFiltrados);
        }

        // Inicialmente, exibir todos os eventos
        atualizarTabela(eventos);
    </script>
</body>
</html>
